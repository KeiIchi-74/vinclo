      <div class='cloth-store-show-data'>
        <div class='cloth-store-show-data-head fs-15'>
          <h3>店舗情報（詳細）</h3>
        </div>
        <div class='cloth-store-show-data-main fs-14'>
          <h4>店舗基本情報</h4>
          <table class='cloth-store-show-data-info fs-13'>
            <tbody>
              <tr>
                <th>店名</th>
                <td><%= "#{@cloth_store.name}（#{@cloth_store.name_kana}）" %></td>
              </tr>
              <tr>
                <th>住所</th>
                <td>
