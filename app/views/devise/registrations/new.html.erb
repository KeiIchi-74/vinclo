<div class='regis-container'>
  <div class='regis-header'>
    <div class='regis-header-wrap'>
      <h1>
        <%= link_to 'Vinclo', root_path %>
      </h1>
      <div>
        <p class='regis-login-button'>
          <%= link_to 'ログインの方はこちら', new_user_session_path %>
        </p>
      </div>
    </div>
  </div>
  <div>
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      <div class='regis-main'>
        <section class='regis-main-section'>
          <div class='regis-input' >
            <h2 class='fs-17 fw-700'>gmailで新規会員登録</h2>
            <div class='regis-form-input'>
              <p class='regis-form-input-p fs-12'>※すべてが必須項目です。パスワードは半角英字と半角数字の両方を含めて設定してください。</p>
              <div class='regis-input-box'>
                <div>
                  <%= render partial: "devise/shared/error_messages", locals: { f: @user, attribute: "email", attribute_string: "メールアドレス" } %>
                  <%= f.email_field :email, autofocus: true, placeholder: "gmailアドレス", class: 'fs-16 fw-700' %>
                </div>
              </div>
              <div class='regis-input-box'>
                <p class='regis-input-title fs-14 fw-700'>生年月日</p>
                <div>
                  <%= render partial: "devise/shared/error_messages", locals: { f: @user, attribute: "birth_date", attribute_string: "生年月日" } %>
                  <%= f.date_select(
                      :birth_date,
                      class:'select-birth fs-16 fw-700',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt: true,
                      start_year: 1930,
                      end_year: (Time.now.year - 12),
                      date_separator: '') %>
                </div>
              </div>
              <div class='regis-input-box'>
                <div class='regis-input-password'>
                  <%= render partial: "devise/shared/error_messages", locals: { f: @user, attribute: "password", attribute_string: "パスワード" } %>
                  <%= f.password_field :password, placeholder: "パスワード【6〜16文字】", class: 'fs-16 fw-700' %>
                </div>
                <div class='regis-confirmation'>
                  <%= render partial: "devise/shared/error_messages", locals: { f: @user, attribute: "password_confirmation", attribute_string: "パスワード【確認用】" } %>
                  <%= f.password_field :password_confirmation, placeholder: "パスワード【確認用】", class: 'fs-16 fw-700' %>
                </div>
              </div>
            </div>
            <div class='regis-submit-button'>
              <%= f.submit "会員登録用メール送信", id: 'regis-submit-1' %>
            </div>
          </div>
        </section>
